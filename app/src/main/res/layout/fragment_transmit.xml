<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SettingFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transmit_message_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/sendMessageInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sendMessageInputLayout"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.78"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="0dp"
        android:maxHeight="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sendMessageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:hint="@string/transmit_send_text_input_hint"
            app:layout_constraintBottom_toBottomOf="@+id/textInputLayout2"
            app:layout_constraintEnd_toEndOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/sendMoreButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="62dp"
        android:layout_height="49dp"
        android:layout_marginBottom="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="visible"
        app:icon="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sendMessageInputLayout"
        tools:ignore="SpeakableTextPresentCheck"
        tools:text=" " />

    <Button
        android:id="@+id/sendMessageButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="62dp"
        android:layout_height="49dp"
        android:visibility="gone"
        android:layout_marginBottom="4dp"
        app:icon="@drawable/baseline_send_24"
        app:layout_constraintBottom_toBottomOf="@+id/sendMessageInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sendMessageInputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>